{{!< layouts/main}} 
<h1>All Products</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Product Notes</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.firstName}} {{this.lastName}}</td>
                    <td>{{formatDate this.dateOfBirth}}</td>
                    <td>{{this.address1}}, {{this.address2}}, {{this.city}}, {{this.postalCode}}, {{this.country}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.productNotes}}</td>
                    <td><a href="/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>